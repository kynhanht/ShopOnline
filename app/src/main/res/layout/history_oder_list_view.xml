<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10">



            <LinearLayout
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/historyOrderDateTv"
                    android:text="2 December,2016"
                    android:textSize="25sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/orderIdTv"
                    android:text="Order num:#1"
                    android:textSize="20sp"
                    android:textColor="#1A1D17"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/paymentTv"
                    android:text="650,000 Đ"
                    android:textSize="20sp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom">
                <Button
                    android:id="@+id/viewDetailBtn"
                    android:textSize="20sp"
                    android:text="View details"
                    android:layout_marginBottom="10dp"
                    android:textAllCaps="false"
                    android:textColor="#EEE8E8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#8BC34A"/>

            </LinearLayout>


</LinearLayout>